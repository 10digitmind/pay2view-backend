<div style="width: 100%; max-width: 600px; margin: 0 auto; padding: 20px; 
            font-family: Arial, sans-serif; background-color: #f8f8f8; 
            border-radius: 12px; border: 1px solid #ddd; text-align: center; color: #333;">
  
  <!-- Icon -->
  <div style="font-size: 48px; color: #999; margin-bottom: 20px;">
    &#128275; <!-- Lock/unlock icon -->
  </div>

  <!-- Greeting -->
  <h2 style="margin-bottom: 10px;">Hello {{buyerName}},</h2>

  <!-- Heading -->
  <h3 style="margin-bottom: 10px; color: #555;">Content Unlocked!</h3>

  <!-- Message -->
  <p style="font-size: 16px; line-height: 1.5; margin-bottom: 20px; color: #555;">
    You have successfully unlocked <strong>{{contentTitle}}</strong><br/>
    You can now access it using the button below.
  </p>

  <!-- Access Button -->
  <a href="{{contentUrl}}" 
     style="display: inline-block; padding: 10px 20px; background-color: #333; 
            color: #fff; text-decoration: none; border-radius: 6px; font-weight: bold;">
    Access Content
  </a>

  <!-- Footer -->
  <p style="margin-top: 20px; font-size: 12px; color: #999;">
    This is an automated notification. Please do not reply.
  </p>
</div>
